{
    "compilerOptions": {
      // Default
      "target": "es5", 
      "esModuleInterop": true, 
      "forceConsistentCasingInFileNames": true,
      "strict": true, 
      "skipLibCheck": true,
  
      // Added
      "jsx": "react-jsx", 
      "module": "ESNext",  
    //   "declaration": true,
    //   "declarationDir": "dist/types",
      "sourceMap": true,
      "outDir": "./dist/",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
    //   "incremental": true,
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "rollup.config.ts",
    ]
  }
